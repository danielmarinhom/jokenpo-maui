<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jokenpo.View.Jokenpo"
             Title="Jokenpo">
    <VerticalStackLayout>
        <Label 
            Text="Countdown"
            />
        <HorizontalStackLayout>
            <Image
                Source="{Binding SourcePlayer}"
            />
            <Image 
                Source="{Binding SourceBot}"
                />
        </HorizontalStackLayout>
        <Picker 
            SelectedIndex="{Binding IndexPicker}"
            Title="Pick">
            

            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Rock</x:String>
                    <x:String>Paper</x:String>
                    <x:String>Scissors</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button 
                x:Name="ButtonChoose"
                Text="Choose"
                FontSize="15"
                HorizontalOptions="Center"
                BackgroundColor="Gray"
                TextColor="White"
                Command="{Binding FlipCommand}"
                />
    </VerticalStackLayout>
</ContentPage>